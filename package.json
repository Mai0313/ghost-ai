{
  "name": "ghost_ai",
  "version": "1.0.0",
  "description": "Ghost AI - Invisible AI-powered desktop assistant (Electron + React + TypeScript)",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n VITE,MAIN,ELECTRON \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsup --watch",
    "dev:electron": "wait-on dist/main.js && nodemon --watch dist/main.js --exec electron -- dist/main.js",
    "build": "rimraf dist && vite build && tsup",
    "dist": "npm run build && electron-builder",
    "lint": "echo 'No linter configured yet'",
    "format": "echo 'No formatter configured yet'",
    "test": "echo 'No tests yet'"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "openai",
    "desktop",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@vitejs/plugin-react": "*",
    "concurrently": "*",
    "electron": "*",
    "electron-builder": "*",
    "nodemon": "*",
    "rimraf": "*",
    "tsup": "*",
    "typescript": "*",
    "vite": "*",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "electron-store": "*",
    "electron-window-state": "*",
    "openai": "*",
    "react": "*",
    "react-dom": "*",
    "screenshot-desktop": "*"
  }
}
