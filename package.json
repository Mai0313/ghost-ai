{
  "name": "ghost-ai",
  "version": "1.0.0",
  "description": "Ghost AI - Invisible AI-powered desktop assistant (Electron + React + TypeScript)",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n VITE,MAIN,ELECTRON \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsup --watch",
    "dev:electron": "wait-on dist/main.js && nodemon --watch dist/main.js --exec electron -- dist/main.js",
    "build": "rimraf dist && vite build && tsup",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --publish never",
    "dist:win:portable": "npm run build && electron-builder --win portable --publish never",
    "dist:mac": "npm run build && electron-builder --mac --publish never",
    "dist:mac:zip": "npm run build && electron-builder --mac zip --publish never",
    "dist:linux": "npm run build && electron-builder --linux --publish never",
    "dist:linux:portable": "npm run build && electron-builder --linux AppImage --publish never",
    "lint": "eslint . --fix",
    "format": "prettier -w .",
    "test": "echo 'No tests yet'"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "openai",
    "desktop",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "*",
    "concurrently": "*",
    "electron": "*",
    "electron-builder": "*",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "nodemon": "*",
    "prettier": "^3.6.2",
    "rimraf": "*",
    "tsup": "*",
    "typescript": "*",
    "typescript-eslint": "^8.39.0",
    "vite": "*",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "electron-store": "*",
    "electron-window-state": "*",
    "@blocknote/core": "*",
    "@blocknote/mantine": "*",
    "@blocknote/react": "*",
    "openai": "*",
    "react": "*",
    "react-dom": "*",
    "screenshot-desktop": "*",
    "ws": "^8.18.3"
  }
}
